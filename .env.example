# Backend API
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000

# Neon Auth (required for frontend auth UI)
NEON_AUTH_BASE_URL=https://your-project.neonauth.c-1.us-east-1.aws.neon.tech/neondb/auth
# Cookie secret for Neon Auth sessions (min 32 chars). Generate with: openssl rand -base64 32
NEON_AUTH_COOKIE_SECRET=

# Sentry (frontend)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1

# Sentry (server/edge runtime)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
